<%= "#{caddy_domain_name}:#{caddy_port}" %> {
  log <%= caddy_log_path %>
  root <%= escalade_public_dir %>
  tls <%= caddy_tls_email_address %>
  proxy / <%= "#{escalade_host}:#{escalade_port}" %> {
    proxy_header Host {host}
    proxy_header X-Real-IP {remote}
    proxy_header X-Forwarded-Proto {scheme}
<%- if Rails.env.production? %>
    except /assets
<% end %>
  }
}

import <%= caddy_sites_path %>
